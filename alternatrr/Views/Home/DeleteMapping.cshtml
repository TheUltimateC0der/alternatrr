@model DeleteMappingViewModel
@{
    ViewData["Title"] = "Delete mapping";
    ViewData["Message"] = "Are you sure?";
}

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-warning" role="alert">
            <form asp-action="DeleteMapping" method="post">
                <p>Do you really want to delete the mapping <code>@Model.SceneMapping.SearchTerm</code> ?</p>

                @Html.HiddenFor(x => x.MappingId)

                <button type="submit" class="btn btn-danger">Yes, I am sure!</button>
            </form>
        </div>
    </div>
</div>